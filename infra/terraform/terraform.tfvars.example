# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
region        = "us-east-1"
instance_type = "t3.medium"

# SSH Key (must exist in AWS)
# Create with: aws ec2 create-key-pair --key-name gix-node-key --query 'KeyMaterial' --output text > gix-node-key.pem
ssh_key_name = "gix-node-key"

# Git Repository
git_repo_url = "https://github.com/rjfisher123/gix.git"
git_branch   = "main"

# Node Identifier
node_id = "01"

# AMI ID (Ubuntu 22.04 LTS - us-east-1)
# Update if deploying to a different region
ami_id = "ami-0c7217cdde317cfec"

